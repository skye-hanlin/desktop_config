[global]
font = Jetbrains Nerd Font Mono 12
width = 320
height = (0, 400)
origin = top-right
offset = (10, 10)
corner_radius = 16
padding = 18
horizontal_padding = 20
frame_width = 2
separator_color = "#4b5b7e"        # 使用TokyoNight Moon中较暗的紫色作为分隔线颜色
progress_bar = true
progress_bar_height = 6
progress_bar_corner_radius = 3

# TokyoNight Moon 紫色调主题 - 每个节单独设置超时，并统一使用紫色调背景
[urgency_low]
    background = "#2c2f4f"         # 较深的紫色背景
    foreground = "#c8d3f5"         # 前景色为TokyoNight Moon中的浅灰色
    frame_color = "#7aa2f7"        # 使用TokyoNight Moon中的柔和蓝色作为边框颜色以提供对比度
    timeout = 5  # 5秒

[urgency_normal]
    background = "#3a3e6f"         # 中等深度的紫色背景，比低紧急度稍亮
    foreground = "#c8d3f5"         # 相同的前景色保持一致性
    frame_color = "#bb9af7"        # 使用TokyoNight Moon中的亮紫色作为边框颜色
    timeout = 5  # 5秒

[urgency_critical]
    background = "#4a4e8f"         # 更亮一些的紫色背景用于关键通知
    foreground = "#ff9e64"         # 使用TokyoNight Moon中的橙色作为前景色，突出显示重要信息
    frame_color = "#ff9e64"        # 同样的橙色边框增强视觉冲击力
    timeout = 10  # 关键通知10秒
