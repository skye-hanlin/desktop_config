[global]
font = Jetbrains Nerd Font Mono 12
width = 320
height = (0, 400)
origin = top-right
offset = (10, 10)
corner_radius = 16
padding = 18
horizontal_padding = 20
frame_width = 2
separator_color = "#4b5b7e"        # 使用TokyoNight Moon中较暗的紫色作为分隔线颜色
progress_bar = true
progress_bar_height = 6
progress_bar_corner_radius = 3

# TokyoNight Moon 紫色主题 - 每个节单独设置超时，并统一使用紫色调背景
[urgency_low]
    background = "#1a1b26"         # 和TokyoNight Moon背景颜色相匹配的深色背景
    foreground = "#c0caf5"         # 前景色为TokyoNight Moon中的浅灰色
    frame_color = "#7aa2f7"        # 使用TokyoNight Moon中的蓝色作为边框颜色以提供对比度
    timeout = 5  # 5秒

[urgency_normal]
    background = "#24283b"         # 较深的背景颜色，增加对比度
    foreground = "#c0caf5"         # 相同的前景色保持一致性
    frame_color = "#bb9af7"        # 使用TokyoNight Moon中的亮紫色作为边框颜色
    timeout = 5  # 5秒

[urgency_critical]
    background = "#2f334d"         # 更深的背景颜色用于关键通知
    foreground = "#ff9e64"         # 使用TokyoNight Moon中的橙色作为前景色，突出显示重要信息
    frame_color = "#ff9e64"        # 同样的橙色边框增强视觉冲击力
    timeout = 10  # 关键通知10秒
